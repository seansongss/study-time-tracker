{
  "manifest_version": 3,
  "name": "Study Time Tracker",
  "version": "1.0.0",
  "description": "Track study time across local files and websites by course; daily & weekly summaries.",
  "permissions": ["storage", "tabs", "idle", "alarms", "activeTab"],
  "host_permissions": ["<all_urls>", "file://*/*"],
  "background": { "service_worker": "background.js" },
  "action": {
    "default_title": "Study Time Tracker",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
